CREATE TABLE `admin`(

  `username` varchar(128) NOT NULL, 
  `password` varchar(128) NOT NULL,

PRIMARY KEY  (`username`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1 AUTO_INCREMENT=100;


